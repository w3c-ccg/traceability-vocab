{
    "$id": "https://w3id.org/traceability/schemas/Customer.json",
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$comment": "{\"term\": \"Customer\", \"@id\": \"https://w3id.org/traceability#Customer\"}",
    "title": "Customer",
    "description": "Customer record based on Customer from schema.org",
    "type": "object",
    "required": [
        "type",
        "name",
        "address",
        "telephone",
        "email"
    ],
    "properties": {
        "@context": {
            "type": "array"
        },
        "type": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array"
                }
            ]
        },
        "name": {
            "$comment": "{\"term\": \"name\", \"@id\": \"https://schema.org/name\"}",
            "title": "Name of the Customer",
            "type": "string",
            "default": "",
            "examples": [
                "Jane Doe"
            ]
        },
        "address": {
            "$comment": "{\"term\": \"address\", \"@id\": \"https://schema.org/PostalAddress\"}",
            "title": "Address of the Customer",
            "$ref": "https://w3id.org/traceability/schemas/PostalAddress.json"
        },
        "telephone": {
            "$comment": "{\"term\": \"telephone\", \"@id\": \"https://schema.org/telephone\"}",
            "title": "Telephone",
            "type": "string",
            "default": "",
            "examples": [
                "(425) 123-4567"
            ]
        },
        "email": {
            "$comment": "{\"term\": \"email\", \"@id\": \"https://schema.org/email\"}",
            "title": "Email",
            "type": "string",
            "default": "",
            "examples": [
                "mailto:jane-doe@xyz.edu"
            ]
        }
    },
    "additionalProperties": false
}